{
	"name": "good-vendor",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prettier-fix": "prettier --write \"**/*.{js,jsx,ts,tsx,md,mdx,css,html,scss}\" \"!\\.next/**\"",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"prettier": {
		"printWidth": 80,
		"tabWidth": 2,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"proseWrap": "always",
		"jsxSingleQuote": true,
		"jsxBracketSameLine": false,
		"htmlWhitespaceSensitivity": "css",
		"arrowParens": "avoid"
	},
	"eslintIgnore": [
		"node_modules",
		"coverage",
		"dist",
		"build",
		"docs",
		".vscode",
		".github",
		".idea"
	],
	"lint-staged": {
		"**/*.+(js|ts|tsx|jsx)": [
			"eslint --fix",
			"prettier --write --ignore-unknown"
		],
		"**/*.+(css|sass|less|scss|json|html|jsx)": [
			"prettier --write --ignore-unknown"
		]
	},
	"dependencies": {
		"@headlessui/react": "^2.1.2",
		"@heroicons/react": "^2.1.5",
		"@reduxjs/toolkit": "^2.2.7",
		"@tailwindcss/forms": "^0.5.7",
		"@types/mdx": "^2.0.13",
		"chart.js": "^4.4.4",
		"date-fns": "^3.6.0",
		"formik": "^2.4.6",
		"html-react-parser": "^5.1.13",
		"js-cookie": "^3.0.5",
		"lucide-react": "^0.429.0",
		"next": "^14.2.17",
		"react": "^18",
		"react-chartjs-2": "^5.2.0",
		"react-dom": "^18",
		"react-google-autocomplete": "^2.7.3",
		"react-loader-spinner": "^6.1.6",
		"react-redux": "^9.1.2",
		"react-router-dom": "^6.26.2",
		"react-toastify": "^10.0.5",
		"redux-persist": "^6.0.0",
		"yup": "^1.4.0"
	},
	"devDependencies": {
		"@types/js-cookie": "^3.0.6",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@typescript-eslint/eslint-plugin": "^8.2.0",
		"@typescript-eslint/parser": "^8.2.0",
		"eslint": "^8",
		"eslint-config-next": "^14.2.5",
		"husky": "^9.1.5",
		"postcss": "^8",
		"prettier": "^3.3.3",
		"tailwindcss": "^3.4.1",
		"typescript": "^5"
	}
}
